#!/usr/bin/env php
<?php
/**
 * 时间处理
 * Create Time : 2015-3-2 10:12
 * @author wubaiqing <wubaiqing@vip.qq.com>
 */

// 只保留参数
array_shift($argv);

// 判断参数数量
$count = count($argv);
if ($count > 1) {
  echo '参数传递错误';
  exit;
}

// 没有参数直接打印时间戳
if ($count == 0) {
  echo time();
  exit;
}

// 参数
$arg = array_shift($argv);

// 参数长度
$argCount = count($arg);

// 如果是时间戳,输出时间
if ($argCount == 11) {
  echo date('Y-m-d H:i:s', $arg);
} else {
  echo strtotime($arg);
}
